@{ 
    @model Cs_Evaluator.ViewModels.HomeworkViewModel
}

@section scripts {
    <script scr="~lib/jquery/jquery-validation/dist/jquery.validate.min.js"></script>
    <script scr="~lib/jquery/jquery-validation-unobstrusive/jquery.validate.unosbstrusive.min.js"></script>
}

<hr />

<h3> Submit homework </h3>

<form asp-action="Index"
      asp-controller="App"
      method="post"
      enctype="multipart/form-data">

    <span asp-validation-summary="ModelOnly" style="color:darkred"></span>

    <div class="form-group">
        @Html.LabelFor(model => model.Surname)
        <br />
        @Html.EditorFor(model => model.Surname)

        <span asp-validation-for="Surname" style="color:darkred"></span>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Forename)
        <br />
        @Html.EditorFor(model => model.Forename)

        <span asp-validation-for="Forename" style="color:darkred"></span>
    </div>

    @*
        <div>
            <label asp-for="Subject"> Subject  </label>
            <br />
            <input asp-for="Subject" />

        </div>
    *@


    <div class="form-group">
        @Html.LabelFor(model => model.CsProject)

        @Html.EditorFor(model => model.CsProject)

        <span asp-validation-for="CsProject" style="color:darkred"></span>
    </div>


    <div>
        <input type="submit" value="Submit" />
    </div>
</form>
