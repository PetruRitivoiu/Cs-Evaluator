@{
    ViewData["Title"] = "Results";
    @model CsEvaluator.Data.ViewModels.ResultViewModel
}

<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<div class="container">
    <p>Student: @Model.StudentName</p>
    <p>Subject: @Model.SubjectName</p>
    <p>Homework: @Model.HomeworkName</p>
    <p>Homework description: @Model.HomeworkDescription</p>
    <p>Evaluation result: @Model.Evaluation.EvaluationResult</p>

    <hr />

    @if (string.IsNullOrWhiteSpace(Model.Evaluation.Error))
    {
        @foreach (var ruleEvaluation in Model.Evaluation.RulesEvaluation)
        {
            <p> Nume regula: <b>@ruleEvaluation.RuleInfo.Description</b></p>

            <p>Rezultat evaluare: <b>@ruleEvaluation.HasPassed</b></p>

            <p>Informatii aditionale: <b>@ruleEvaluation.Reason</b></p>
            <hr />
        }
    }

    else
    {
        <p>Errors: <b>@Model.Evaluation.Error</b></p>
    }
</div>
